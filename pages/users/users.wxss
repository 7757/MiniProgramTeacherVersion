/**********************************************************************************/

.weui-demo-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.weui-half-screen-dialog {
  transition: all 0.3s;
  transform: translateY(100%);
}

.weui-demo-dialog_show {
  visibility: visible;
  opacity: 1;
}

.weui-demo-dialog_show .weui-half-screen-dialog {
  transform: translateY(0);
}

.weui-half-screen-dialog__title {
  font-size: 17px;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
}

.weui-half-screen-dialog__desc {
  font-size: 15px;
  font-weight: 600;
  color: rgba(22, 8, 10, 1);
}

.weui-half-screen-dialog__tips {
  font-size: 15px;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 27px;
}

