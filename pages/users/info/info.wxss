/*radio未选中时样式 */

radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid rgba(238, 238, 238, 1);
}

/* 选中后的 背景样式*/

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #008489;
  background: #008489;
}

/* 选中后的 对勾样式  */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}

.weui-cell:before {
  border-top: none;
}

