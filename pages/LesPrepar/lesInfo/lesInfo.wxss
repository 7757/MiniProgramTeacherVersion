

/* 跟目录 */
.root{
  width: 90%;
  margin: 0px auto;
  display: flex;
  flex-direction: column;
}

/* 陪伴的历程 */
.title_top{
  width:400rpx;
  height:46rpx;
  font-size:46rpx;
  font-weight:600;
  color:rgba(22,8,10,1);
  line-height:46rpx;
  margin: 50rpx 0rpx 24rpx 0rpx;
}

/* 历程介绍 */
.title_details{
  width:650rpx;
  height:72rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(22,8,10,1);
  line-height:36rpx;
}




/* 按钮布局 */
.btn_list{
  display: flex;
  margin: 0rpx 0rpx 52rpx 0rpx;
  flex-wrap: wrap;
}

/* 按钮未中样式 */
.btn_item{
  margin: 15rpx 0rpx;
  text-align: center;
  border-radius:8rpx;
  height:64rpx;
  background-color: #FFFFFF;
  color: #16080A;
  font-size: 26rpx;
  line-height:64rpx;
  margin-right: 28rpx;
  border:2rpx solid rgba(223,223,223,1);
  padding: 0rpx 20rpx;
}

/* 文本域 */

.areas{
  height:340rpx;
  width: 100%;
  font-size: 28rpx;
  text-indent: 28rpx;
  border-top: 1rpx solid gainsboro;
  border-bottom: 1rpx solid gainsboro;
  padding-top: 28rpx;
  overflow: hidden;   
  position: relative; 
}

/*提示 */
.tips_bottom{

  margin-top: 36rpx;
  width:644rpx;
  height:70rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(22,8,10,0.6);
  line-height:34rpx;
  letter-spacing:4rpx;
}


/* ********************************* */
/* 底部按钮 */
.bottom_bar {
  background: #FFFFFF;
  height: 81px;
  width: 100%;
  border-top: 1px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0px;
  box-shadow:0px 1px 4px 1px rgba(195,194,194,0.5);

}

/* 确定按钮 */

.contact_him {
width:656rpx;
height:96rpx;
background:rgba(0,132,137,1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
  text-align: center;
  position: absolute;
  margin: 0 auto;
}