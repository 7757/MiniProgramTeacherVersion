/* 页面 css 文件 */

.orange-date {
  background: rgba(50, 133, 139, 1);
  border-radius: 50%;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 12rpx;
}

.bottom_bar {
  width: 100%;
  border-top: 1px;
  position: fixed;
  bottom: 0px;
  box-shadow: 0px 1px 4px 1px rgba(195, 194, 194, 0.5);
  padding-top: 17px;
  padding-bottom: 17px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom_bar .next_time {
  width: 656rpx;
  height:  96rpx;
  background: rgba(50, 133, 139, 1);
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
  text-align: center;
}



/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/* 弹出层 */

.modalDlg {
  width: 468rpx;
  height: 132rpx;
  position: fixed;
  top: 30vh;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(22, 8, 10, 1);
  line-height: 132rpx;
  background: rgba(255, 255, 255, 1);
}
