.period {
  width: 90%;
  margin: 0px auto;
}

.period_k {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 25px;
}
.k{
  width: 7%;
}
.period_time_all {
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: 1px solid rgba(226, 226, 226);
  font-size: 13px;
  font-weight: 500;
  color: rgba(22, 8, 10);
  text-align: center;
  line-height: 40px;
  letter-spacing: 1px;
}

.period_time {
  width: 154px;
  height: 40px;
  border-radius: 4px;
  border: 1px solid rgba(226, 226, 226);
  font-size: 13px;
  font-weight: 500;
  color: rgba(22, 8, 10);
  text-align: center;
  line-height: 40px;
  letter-spacing: 1px;
}

.period_time:hover {
  background: rgba(0, 132, 137);
  color: rgba(255, 255, 255, 1);
}
.period_time_all:hover {
  background: rgba(0, 132, 137);
  color: rgba(255, 255, 255, 1);
}

.mai {
  position: fixed;
  bottom: 0.1px;
  width: 100%;
  height: 82px;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 4px 1px rgba(195, 194, 194, 0.5);
}

.maibtn {
  width: 90%;
  height: 48px;
  background: rgba(0, 132, 137, 1);
  border-radius: 4px;
  font-size: 16px;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 48px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
}
