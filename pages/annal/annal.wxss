.head {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.show {
  visibility: visible;
  opacity: 1;
  transition: all 0.3s;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*radio未选中时样式 */

radio .wx-radio-input {
  width: 42rpx;
  height: 42rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(0, 132, 137, 1);
}

/* 选中后的 背景样式  */

radio .wx-radio-input.wx-radio-input-checked {
  background: transparent;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

radio .wx-radio-input.wx-radio-input-checked::before {
  color: rgba(0, 132, 137, 1);
  line-height: 40rpx;
  text-align: center;
  background: transparent;
  width: 42rpx;
  height: 42rpx;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
