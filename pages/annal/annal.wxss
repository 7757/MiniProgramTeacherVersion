/**************************自定义radio样式**************/


/* 单选框未选中 */

radio .wx-radio-input {
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  border: 1rpx solid rgba(50, 133, 139, 1);
  right: 50rpx;
}

/* 选中后的 背景样式*/

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #008489;
  background: #008489;
}

/* 单选框选中后对勾样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

/**确定按钮**/

.btnqd {
  width: 100%;
  margin-top: 40rpx;
